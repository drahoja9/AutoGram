{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "actions/*": ["./src/actions/*"],
      "actions": ["./src/actions"],

      "components/*": ["./src/components/*"],
      "components": ["./src/components"],

      "epics/*": ["./src/epics/*"],
      "epics": ["./src/epics"],

      "lib/*": ["./src/lib/*"],
      "lib": ["./src/lib"],

      "reducers/*": ["./src/reducers/*"],
      "reducers": ["./src/reducers"],

      "views/*": ["./src/views/*"],
      "views": ["./src/views"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
